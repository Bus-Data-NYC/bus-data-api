<!-- index.html -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Bus Transit Data</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

    <style type="text/css">
    td {
    	padding-right: 5px;
    }
    </style>

  </head>
  <body>

  	<div class="container" style="margin-top: 20px">

  		<h1>
  			<b onclick="gohome()" style="cursor:pointer">
  				Bus Data API
  			</b> 
  			<span style="color:grey;font-weight:100">
  				<% if (route.route_short_name !== "") { %>
  					<%= route.route_short_name %>
  				<% } else { %>
  					<%= route.route_id %>
  				<% } %> Route Explorer
  			</span>

  			<br>
  			<small>
  				<sub>
  					<span class="glyphicon glyphicon-stop" style="color:#<%= route.route_color %>"></span> 
  					<%= route.agency_id %> <%= route.route_long_name %> <%= route.route_desc %> 
  					<a href="<%= route.route_url %>" style="font-size:x-small">
  						(MTA Page)
  					</a>
  				</sub>
  			</small>
  		</h1>

			
  		<div id="stops">

	  		<table>
	  			<caption>Scheduled</caption>
	  			<% for (var i = 0; i < 24; i++) { %>
	  				<tr>
	  					<td><b><%= i %>: </b></td>
	  					<% if (route.stop_times[i].length < 1) { %>
	  						<td>&nbsp;&ndash;</td>
	  					<% } else { %>
	  						<td>
	  							<% for (var t = 0; t < route.stop_times[i].length; t++) { %>
	  								<% if (route.stop_times[i][t][1] == "D") { %>
	  									<%= route.stop_times[i][t][0] %><% if (t < (route.stop_times[i].length - 1)) { %>,<% } %>
	  								<% } else { %>
	  									<span style="text-decoration:underline">
	  										<%= route.stop_times[i][t][0] %><% if (t < (route.stop_times[i].length - 1)) { %>,<% } %>
	  									</span>
	  								<% } %>
	  							<% } %>
	  						</td>
	  					<% } %>
	  				</tr>
	  			<% } %>
	  		</table>



	  	</div>

  	</div>

  </body>
	<script>
		// Globals
		function gohome () {
			window.location.pathname = "/";
		};


	</script>
</html>


